{
	"name": "codemotion2021ws",
	"displayName": "Codemotion 2021 Workshop",
	"description": "Sample extension developed during Codemotion 2021",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:codemotion2021ws.helloWorld",
		"onCommand:codemotion2021ws.testBasicUI",
		"onCommand:codemotion2021ws.testAdvancedUI",
		"onView:codemotion2021ws.uiview",
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codemotion2021ws.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "codemotion2021ws.testBasicUI",
				"title": "Test basic UI"
			},
			{
				"command": "codemotion2021ws.testAdvancedUI",
				"title": "Test advanced UI"
			},
			{
				"command": "codemotion2021ws.treeViewTitleCommand",
				"title": "Title Command",
                "icon": {
                    "light": "media/light/bell.svg",
                    "dark": "media/dark/bell.svg"
                }
			},
			{
				"command": "codemotion2021ws.treeViewElementCommand",
				"title": "Element Command"
			}
		],
		"menus": {
			"view/title": [
				{
					"command":"codemotion2021ws.treeViewTitleCommand",
					"when": "view==codemotion2021ws.uiview",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command":"codemotion2021ws.treeViewElementCommand",
					"when": "view==codemotion2021ws.uiview && viewItem == even"
				}
			]
		},
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "codemotion2021ws-bar",
                    "title": "Codemotion 2021",
                    "icon": "media/icon.svg"
                }
            ]
        },
		"views": {
			"codemotion2021ws-bar": [
				{
					"id": "codemotion2021ws.uiview",
					"name": "Sample UI View"
				}
			]
		},
		"configuration": {
			"title": "Codemotion 2021 Workshop",
			"properties": {
				"codemotion2021ws.textToHighlight": {
					"type": "string",
					"default": "ciao",
					"description": "Specifies the string that should be highlighted when saving text documents."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.54.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"@types/number-to-words": "^1.2.0",
		"number-to-words": "^1.2.4"
	}
}
